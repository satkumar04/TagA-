<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:background="#f9fdf9"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:weightSum="1">
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txt_curdate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".9"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="curdate"
                    android:textStyle="bold"
                    />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15" />

                <Button
                    android:id="@+id/btn_offline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:background="@drawable/buttonroundedred"
                    android:singleLine="true"
                    android:text="OFFLINE"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05" />
                <Button
                    android:id="@+id/btn_online"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:background="@drawable/buttonroundedgreen"
                    android:singleLine="true"
                    android:text="ONLINE"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05" />
                <Button
                    android:id="@+id/btn_moving"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:background="@drawable/buttonroundedgrey"
                    android:singleLine="true"
                    android:text="MOVING"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".12" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center_vertical"
                    android:rotation="-90"
                    android:text="Number of Vehicles"
                    android:textColor="@color/black"

                    android:textSize="8dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".64"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".18"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/txt_off"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:text="OFFLINE"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01"/>
                <TextView
                    android:id="@+id/txt_on"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:text="ONLINE"
                    android:textStyle="normal"
                    android:textSize="16dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01"/>
                <TextView
                    android:id="@+id/txt_move"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:text="MOVING"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
                <TextView
                    android:id="@+id/num_offline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01"/>
                <TextView
                    android:id="@+id/num_online"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01"/>
                <TextView
                    android:id="@+id/num_moving"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.025"
                android:weightSum="1">


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.025">
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.235"
                android:weightSum="1">
              <View
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight=".1"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/alarmsbuttonborder"
                    android:layout_weight=".8">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".17">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".6"
                            android:text="ALARMS"
                            android:textColor="#f7f8fa"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="18dp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".325">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".05"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"
                            android:singleLine="true"
                            android:textSize="15sp">
                            <Button
                                android:id="@+id/btn_sos"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/sos" />
                            <TextView
                                android:id="@+id/txt_soscount"
                                android:layout_width="28dp"
                                android:layout_height="25dp"
                                android:textSize="18dp"
                                android:paddingBottom="4dp"
                                android:textStyle="bold"
                                android:gravity="center|top"
                                android:textColor="@color/white"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"
                            android:singleLine="true"
                            android:textSize="15sp">
                        <Button
                            android:id="@+id/btn_overspeed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/overspeed"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                            <TextView
                                android:id="@+id/txt_overspeed"
                                android:layout_width="28dp"
                                android:layout_height="25dp"
                                android:textSize="18dp"
                                android:paddingBottom="4dp"
                                android:textStyle="bold"
                                android:gravity="center|top"
                                android:textColor="@color/black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"
                            android:singleLine="true"
                            android:textSize="15sp">
                        <Button
                            android:id="@+id/btn_acc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/acc" />
                            <TextView
                                android:id="@+id/txt_acc"
                                android:layout_width="28dp"
                                android:layout_height="25dp"
                                android:textSize="10dp"
                                android:paddingBottom="4dp"
                                android:textStyle="bold"
                                android:gravity="center|top"
                                android:textColor="@color/black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".05"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".08"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".325">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".05"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"
                            android:singleLine="true"
                            android:textSize="15sp">
                            <Button
                                android:id="@+id/btn_lowbattery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/lowbattery" />
                            <TextView
                                android:id="@+id/txt_lowbattery"
                                android:layout_width="28dp"
                                android:layout_height="25dp"
                                android:textSize="18dp"
                                android:paddingBottom="4dp"
                                android:textStyle="bold"
                                android:gravity="center|top"
                                android:textColor="@color/black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"
                            android:singleLine="true"
                            android:textSize="15sp">
                            <Button
                                android:id="@+id/btn_powercut"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/powercut" />
                            <TextView
                                android:id="@+id/txt_powercut"
                                android:layout_width="28dp"
                                android:layout_height="25dp"
                                android:textSize="18dp"
                                android:paddingBottom="4dp"
                                android:textStyle="bold"
                                android:gravity="center|top"
                                android:textColor="@color/black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".12"
                            android:singleLine="true"
                            android:textSize="15sp">
                            <Button
                                android:id="@+id/btn_geofence"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/geofence" />
                            <TextView
                                android:id="@+id/txt_geofence"
                                android:layout_width="28dp"
                                android:layout_height="25dp"
                                android:textSize="18dp"
                                android:paddingBottom="4dp"
                                android:textStyle="bold"
                                android:gravity="center|top"
                                android:textColor="@color/black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".05"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".05"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"/>

            </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.045"
            android:weightSum="1"/>
        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_gravity="start"
        android:background="#efeded"
        app:headerLayout="@layout/navigation_header"
        app:itemIconTint="#ff1b6bae"
        app:itemTextColor="#333"
        app:menu="@menu/navigation_view_items">
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LOGOUT"
            android:textColor="#ffff"
            android:background="@color/NewBARcolor"
            android:layout_gravity="bottom"/>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>